<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <inset
            android:insetTop="2dp"
            android:insetBottom="6dp">
            <shape>
                <solid android:color="#22000000"/>
                <corners android:radius="28dp"/>
            </shape>
        </inset>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/bg_card"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>

</layer-list>
