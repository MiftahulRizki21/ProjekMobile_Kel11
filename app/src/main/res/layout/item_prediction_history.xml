<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/divider"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Tanggal & Risk Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_prediction_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17 Des 2024, 14:30"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                tools:text="17 Des 2024, 14:30"/>

            <TextView
                android:id="@+id/tv_risk_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH RISK"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_risk_high"
                tools:text="HIGH RISK"/>

        </LinearLayout>

        <!-- Risk Description -->
        <TextView
            android:id="@+id/tv_risk_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risiko kanker mulut tinggi. Disarankan untuk konsultasi dengan dokter spesialis."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="4dp"
            tools:text="Risiko kanker mulut tinggi. Disarankan untuk konsultasi dengan dokter spesialis."/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Detail"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_consult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsultasi"
                android:textSize="12sp"
                app:backgroundTint="@color/blue_primary"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>