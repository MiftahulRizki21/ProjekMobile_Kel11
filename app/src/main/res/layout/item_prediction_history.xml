<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Header: Tanggal & Risk Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F7FB">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        app:tint="#757575"/>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_prediction_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="17 Des 2024, 14:30"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    tools:text="17 Des 2024, 14:30"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_risk_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH RISK"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_risk_high"
                tools:text="HIGH RISK"/>

        </LinearLayout>

        <!-- Risk Description -->
        <TextView
            android:id="@+id/tv_risk_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Risiko kanker mulut tinggi. Disarankan untuk konsultasi dengan dokter spesialis."
            android:textColor="#212121"
            android:textSize="14sp"
            android:layout_marginBottom="18dp"
            android:lineSpacingExtra="4dp"
            tools:text="Risiko kanker mulut tinggi. Disarankan untuk konsultasi dengan dokter spesialis."/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_details"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Lihat Detail"
                android:textSize="13sp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#1E88E5"
                app:strokeWidth="1.5dp"
                android:textColor="#1E88E5"
                app:cornerRadius="10dp"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_consult"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Konsultasi"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:backgroundTint="#1E88E5"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
