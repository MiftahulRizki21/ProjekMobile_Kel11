<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <!-- ================= APP BAR ================= -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="Dashboard Dokter"
            android:titleTextColor="@color/text_on_primary"
            android:background="@color/blue_primary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ================= FRAGMENT CONTAINER ================= -->
    <FrameLayout
        android:id="@+id/doctor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <!-- ================= BOTTOM NAV ================= -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_card"
        app:itemIconTint="@color/bottom_nav_bg"
        app:itemTextColor="@color/bottom_nav_unselected"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_dokter" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
