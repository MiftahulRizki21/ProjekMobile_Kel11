<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_home_header"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="32dp"
            android:paddingBottom="40dp"
            android:elevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edukasi Kesehatan Mulut"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi lengkap tentang kesehatan gigi dan mulut"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:alpha="0.95"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="96dp">

            <!-- Kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="36dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_category_prevention"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E3F2FD"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#BBDEFB">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_shield"
                                app:tint="#1E88E5"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pencegahan"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="14dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_category_symptoms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E0F2F1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#B2DFDB">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_symptoms"
                                app:tint="#26A69A"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gejala"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="14dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Artikel Populer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artikel Populer"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="18dp"/>

            <!-- Artikel 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_article1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_article_oral_cancer"
                            app:tint="#1E88E5"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="18dp">

                        <TextView
                            android:id="@+id/tvArticleTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kanker Mulut: Penyebab dan Pencegahan"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/tvArticleTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ketahui faktor risiko dan cara mencegah kanker mulut sejak dini"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:id="@+id/tvArticleTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 menit baca"
                            android:textColor="@color/text_hint"
                            android:textSize="11sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Artikel 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_article2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E0F2F1">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_article_oral_hygiene"
                            app:tint="#26A69A"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cara Merawat Gigi dan Mulut yang Benar"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panduan lengkap menjaga kesehatan mulut sehari-hari"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 menit baca"
                            android:textColor="@color/text_hint"
                            android:textSize="11sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Artikel 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_article3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="36dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E8F5E9">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_article_diet"
                            app:tint="#4CAF50"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makanan untuk Kesehatan Mulut"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makanan yang baik dan buruk untuk kesehatan gigi"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 menit baca"
                            android:textColor="@color/text_hint"
                            android:textSize="11sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tips Cepat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips Cepat"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="18dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_quick_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="36dp"
                tools:listitem="@layout/item_quick_tip"/>

            <!-- Video Edukasi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Edukasi"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="18dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_video_placeholder"
                            android:contentDescription="Video edukasi kesehatan mulut"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teknik Sikat Gigi yang Benar"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pelajari cara menyikat gigi yang benar untuk mencegah plak dan kerusakan gigi"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="14dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="4:32 menit"
                                android:textColor="@color/text_hint"
                                android:textSize="11sp"/>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E3F2FD">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_play"
                                    app:tint="#1E88E5"/>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
