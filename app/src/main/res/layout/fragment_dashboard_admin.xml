<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard Admin"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="16dp"/>

            <!-- STATISTIK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- USERS -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Pengguna"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvUserCount"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- DOKTER -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Dokter"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvDoctorCount"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- KONSULTASI -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Total Konsultasi"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvConsultationCount"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AKSI -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Aksi Cepat"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardKelolaDokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:clickable="true">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:text="Kelola Data Dokter"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                android:clickable="true">

                <TextView
                    android:padding="16dp"
                    android:text="Logout"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
