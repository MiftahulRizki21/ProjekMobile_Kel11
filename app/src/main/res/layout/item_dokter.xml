<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Doctor Photo Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_photo_container"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_doctor_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_doctor_default"
                android:padding="12dp"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:textColor="#212121"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@id/card_photo_container"
            app:layout_constraintTop_toTopOf="@id/card_photo_container"
            app:layout_constraintEnd_toStartOf="@+id/btnEdit"
            tools:text="Dr. Amelia Wijaya" />

        <!-- Doctor Specialization -->
        <TextView
            android:id="@+id/tv_doctor_specialization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#757575"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
            app:layout_constraintEnd_toEndOf="@id/tv_doctor_name"
            tools:text="Spesialis Gigi" />

        <!-- Edit Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_edit_container"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintEnd_toStartOf="@id/card_delete_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                app:tint="#1E88E5"
                android:contentDescription="Edit dokter" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Delete Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_delete_container"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFEBEE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                app:tint="#E53935"
                android:contentDescription="Hapus dokter" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
