<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="96dp">

        <!-- Welcome Header with Gradient Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_home_header"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="48dp"
            android:elevation="6dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kesehatan mulut Anda adalah prioritas kami"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:alpha="0.95"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Hero Branding Card with Lift Effect -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="-32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center">

                <!-- App Logo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F5F7FB">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo"
                        android:contentDescription="OraCare Logo" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OraCare"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Early Oral Cancer Risk Detection\nPowered by Machine Learning"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Primary CTA Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMulaiPrediksi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Mulai Pemeriksaan Risiko"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#1E88E5"
                    app:icon="@drawable/ic_predict"
                    app:iconGravity="textStart"
                    app:iconPadding="14dp"
                    app:iconSize="24dp"
                    android:textColor="@android:color/white"
                    app:elevation="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deteksi dini risiko kanker mulut dengan teknologi ML"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="14dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Action Menu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akses Cepat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Prediction Shortcut -->
                    <LinearLayout
                        android:id="@+id/quickActionPrediction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E3F2FD">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_predict"
                                android:layout_gravity="center"
                                app:tint="#1E88E5"
                                android:contentDescription="Prediction" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prediksi"
                            android:textSize="13sp"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Nearby Clinics -->
                    <LinearLayout
                        android:id="@+id/quickActionClinics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E0F2F1">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_home"
                                android:layout_gravity="center"
                                app:tint="#26A69A"
                                android:contentDescription="Clinics" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Klinik"
                            android:textSize="13sp"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Consultation -->
                    <LinearLayout
                        android:id="@+id/quickActionConsultation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFF3E0">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_chat"
                                android:layout_gravity="center"
                                app:tint="#FB8C00"
                                android:contentDescription="Consultation" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konsultasi"
                            android:textSize="13sp"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="3">

                    <!-- History -->
                    <LinearLayout
                        android:id="@+id/quickActionHistory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F3E5F5">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_recent"
                                android:layout_gravity="center"
                                app:tint="#8E24AA"
                                android:contentDescription="History" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Riwayat"
                            android:textSize="13sp"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Location Map -->
                    <LinearLayout
                        android:id="@+id/quickActionLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFEBEE">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_dialog_map"
                                android:layout_gravity="center"
                                app:tint="#E53935"
                                android:contentDescription="Location" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi"
                            android:textSize="13sp"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Empty Space for symmetry -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- User Activity Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktivitas Anda"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTotalPredictions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#1E88E5"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pemeriksaan"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLastPredictionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#26A69A"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemeriksaan Terakhir"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Nearby Clinics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klinik Terdekat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Clinic Card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Klinik Gigi Sentosa"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_dialog_map"
                                app:tint="#26A69A"
                                android:contentDescription="Distance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.3 km"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginStart="8dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buka"
                                android:textSize="12sp"
                                android:textColor="#26A69A"
                                android:textStyle="bold"
                                android:background="@drawable/bg_badge"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="Lihat Lokasi"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            app:cornerRadius="10dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#1E88E5"
                            app:strokeWidth="1.5dp"
                            android:textColor="#1E88E5"
                            android:layout_marginTop="16dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Clinic Card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RS Dental Care"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_dialog_map"
                                app:tint="#26A69A"
                                android:contentDescription="Distance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.7 km"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginStart="8dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tutup"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:background="@drawable/bg_badge"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="Lihat Lokasi"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            app:cornerRadius="10dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#1E88E5"
                            app:strokeWidth="1.5dp"
                            android:textColor="#1E88E5"
                            android:layout_marginTop="16dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Trust & Safety Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keamanan dan Kepercayaan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- ML Based -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_predict"
                            app:tint="#1E88E5"
                            android:contentDescription="ML Icon" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prediksi Berbasis ML"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menggunakan Machine Learning untuk akurasi tinggi"
                            android:textSize="13sp"
                            android:textColor="#757575"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
