<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Welcome Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E88E5"
            android:padding="20dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kesehatan mulut Anda adalah prioritas kami"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Hero Card Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- App Icon Placeholder -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo"
                    android:contentDescription="OraCare Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OraCare"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Early Oral Cancer Risk Detection\nPowered by Machine Learning"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Primary CTA Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMulaiPrediksi"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Mulai Pemeriksaan Risiko"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#1E88E5"
                    app:icon="@drawable/ic_predict"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akses fitur pemeriksaan risiko kanker mulut Anda"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Action Menu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akses Cepat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Prediction Shortcut -->
                <LinearLayout
                    android:id="@+id/quickActionPrediction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_predict"
                            android:layout_gravity="center"
                            app:tint="#1E88E5"
                            android:contentDescription="Prediction" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prediksi"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Nearby Clinics -->
                <LinearLayout
                    android:id="@+id/quickActionClinics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E0F2F1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_home"
                            android:layout_gravity="center"
                            app:tint="#26A69A"
                            android:contentDescription="Clinics" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klinik"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Consultation -->
                <LinearLayout
                    android:id="@+id/quickActionConsultation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFF3E0">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_chat"
                            android:layout_gravity="center"
                            app:tint="#FB8C00"
                            android:contentDescription="Consultation" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konsultasi"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:weightSum="3">

                <!-- History -->
                <LinearLayout
                    android:id="@+id/quickActionHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F3E5F5">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_recent"
                            android:layout_gravity="center"
                            app:tint="#8E24AA"
                            android:contentDescription="History" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Location Map -->
                <LinearLayout
                    android:id="@+id/quickActionLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFEBEE">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_dialog_map"
                            android:layout_gravity="center"
                            app:tint="#E53935"
                            android:contentDescription="Location" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Empty Space for symmetry -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

        <!-- User Activity Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktivitas Anda"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTotalPredictions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#1E88E5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pemeriksaan"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLastPredictionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#26A69A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemeriksaan Terakhir"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Nearby Clinics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klinik Terdekat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Clinic Card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Klinik Gigi Sentosa"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_dialog_map"
                                app:tint="#26A69A"
                                android:contentDescription="Distance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.3 km"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginStart="6dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buka"
                                android:textSize="12sp"
                                android:textColor="#26A69A"
                                android:textStyle="bold"
                                android:background="@drawable/bg_badge"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Lihat Lokasi"
                            android:textSize="13sp"
                            app:cornerRadius="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#1E88E5"
                            android:textColor="#1E88E5"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Clinic Card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RS Dental Care"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_dialog_map"
                                app:tint="#26A69A"
                                android:contentDescription="Distance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.7 km"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginStart="6dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tutup"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:background="@drawable/bg_badge"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Lihat Lokasi"
                            android:textSize="13sp"
                            app:cornerRadius="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#1E88E5"
                            android:textColor="#1E88E5"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Trust & Safety Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keamanan dan Kepercayaan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ML Based -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_predict"
                        app:tint="#1E88E5"
                        android:padding="8dp"
                        android:background="@drawable/bg_circle_blue"
                        android:contentDescription="ML Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prediksi Berbasis ML"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menggunakan Machine Learning untuk akurasi tinggi"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Early Detection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_shield"
                        app:tint="#26A69A"
                        android:padding="8dp"
                        android:background="@drawable/bg_circle_green"
                        android:contentDescription="Shield Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dukungan Deteksi Dini"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Identifikasi risiko sedini mungkin untuk penanganan optimal"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Data Privacy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="#FB8C00"
                        android:padding="8dp"
                        android:background="@drawable/bg_circle_orange"
                        android:contentDescription="Lock Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privasi dan Keamanan Data"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Anda dilindungi dengan enkripsi standar medis"
                            android:textSize="12sp"
                            android:textColor="#757575"
