<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:id="@+id/main"
    android:background="#F8FAFF"
    android:gravity="center">

    <!-- Header dengan logo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login ke OraCare"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <!-- Login Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:padding="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk ke akun Anda"
                android:textSize="14sp"
                android:textColor="#7986CB"
                android:layout_marginBottom="32dp" />

            <!-- Email/Username Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#B2CAFF"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="#7986CB"
                android:layout_marginBottom="20dp"
                app:startIconDrawable="@drawable/ic_launcher_background"
                app:startIconTint="#B2CAFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Username atau Email"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="#1A237E"
                    android:background="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#B2CAFF"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="#7986CB"
                android:layout_marginBottom="28dp"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="#B2CAFF"
                app:endIconMode="password_toggle"
                app:endIconTint="#B2CAFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#1A237E"
                    android:background="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="MASUK"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02"
                android:background="@drawable/background_gradient"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_launcher_background"
                app:iconTint="@android:color/white"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                app:elevation="4dp" />


            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAF6"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun?"
                android:textSize="14sp"
                android:textColor="#7986CB"
                android:letterSpacing="0.01" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textSize="14sp"
                android:textColor="#1A237E"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2024 KesehatanMulut.ai"
        android:textSize="12sp"
        android:textColor="#7986CB"
        android:layout_marginTop="24dp"
        android:alpha="0.7" />

</LinearLayout>