<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FDFD"
    tools:context=".PrediksiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitlePrediksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediksi Risiko Kanker Mulut"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#197E81" />

        <TextView
            android:id="@+id/tvDescPrediksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jawab pertanyaan berikut sesuai kondisi Anda."
            android:textSize="14sp"
            android:textColor="#92918F"
            android:layout_marginTop="8dp" />

        <!-- Nanti isi pertanyaan-pertanyaan Ya/Tidak di sini -->

        <Button
            android:id="@+id/btnSubmitPrediksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FFC200"
            android:text="Submit Prediksi"
            android:textColor="@color/black"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
